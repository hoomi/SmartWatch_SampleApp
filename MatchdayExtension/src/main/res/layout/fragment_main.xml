<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/list_light_blue_background"
    android:padding="5px"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        style="@style/GameScoreContainer"
        >

        <TextView
            android:id="@+id/v_home_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmartWatch_TextView"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/v_home_score2"
                style="@style/GameScoreStyle"
                />

            <TextView
                android:id="@+id/v_home_score3"
                style="@style/GameScoreStyle"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        style="@style/GameScoreContainer">

        <TextView
            android:id="@+id/v_away_team_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SmartWatch_TextView"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/v_away_score2"
                style="@style/GameScoreStyle"
                />

            <TextView
                android:id="@+id/v_away_score3"
                style="@style/GameScoreStyle"
                />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
